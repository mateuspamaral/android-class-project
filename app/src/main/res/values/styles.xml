<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:dialogTheme">@style/DialogTheme</item>
    </style>

    <style name="TitleBar" parent="AppTheme">
        <item name="android:textColor">@color/color_toolbar_text</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:minHeight">@dimen/titlebar_size</item>
        <item name="android:background">@color/color_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/app_padding</item>
    </style>

    <style name="PostTittle" parent="AppTheme">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowMinWidthMinor">100%</item>
    </style>
</resources>
